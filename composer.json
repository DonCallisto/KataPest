{
  "name": "doncallisto/kata-pest",
  "description": "Infrastructure for a TDD with Pest testing framework in PHP",
  "type": "project",
  "keywords": ["kata", "tdd", "pest", "php"],
  "license": "MIT",
  "require": {
    "php": "^8.4"
  },
  "require-dev": {
    "pestphp/pest": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "KataPest\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true,
      "pestphp/pest-plugin": true
    }
  }
}
